COMPOSE_PROJECT_NAME=kg-viewer-dev

# External URLs (for browser access)
EXTERNAL_FRONTEND_URL=http://localhost:4200
EXTERNAL_BACKEND_URL=http://localhost:5000
EXTERNAL_VIRTUOSO_URL=http://localhost:8890
EXTERNAL_LODVIEW_URL=http://localhost:8080

# Internal service URLs (container-to-container)
VIRTUOSO_URL=http://virtuoso:8890
LODVIEW_URL=http://lodview:8080

# Graph configuration - Use LODView base URL, resources will have /resource/ path
GRAPH_BASE_URI=http://localhost:8080
DEFAULT_GRAPH_NAME=default

# Virtuoso settings
DBA_PASSWORD=dba
SPARQL_UPDATE=true

# Flask settings
FLASK_DEBUG=true
FLASK_ENV=development
MAX_CONTENT_LENGTH=1073741824

# Port mappings
FRONTEND_PORT=4200
BACKEND_PORT=5000
VIRTUOSO_HTTP_PORT=8890
VIRTUOSO_SQL_PORT=1111
LODVIEW_PORT=8080