COMPOSE_PROJECT_NAME=kg-viewer-prod

# External URLs (for browser access - replace with your domain)
EXTERNAL_FRONTEND_URL=https://your-domain.com
EXTERNAL_BACKEND_URL=https://your-domain.com/api
EXTERNAL_VIRTUOSO_URL=https://your-domain.com/virtuoso
EXTERNAL_LODVIEW_URL=https://your-domain.com/lodview

# Internal service URLs (container-to-container)
VIRTUOSO_URL=http://virtuoso:8890
LODVIEW_URL=http://lodview:8080

# Graph configuration - Use LODView base URL, resources will have /resource/ path
GRAPH_BASE_URI=https://your-domain.com
DEFAULT_GRAPH_NAME=default

# Virtuoso settings
DBA_PASSWORD=${VIRTUOSO_DBA_PASSWORD:-dba}
SPARQL_UPDATE=false

# Flask settings
FLASK_DEBUG=false
FLASK_ENV=production
MAX_CONTENT_LENGTH=1073741824

# No port mappings for production (handled by reverse proxy)
# Uncomment if not using reverse proxy:
# FRONTEND_PORT=4200
# BACKEND_PORT=5000
# VIRTUOSO_HTTP_PORT=8890
# VIRTUOSO_SQL_PORT=1111
# LODVIEW_PORT=8080